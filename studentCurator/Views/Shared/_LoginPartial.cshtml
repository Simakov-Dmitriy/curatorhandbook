@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
	<li class="nav-item">
		<span class="btn btn-secondary" style="margin-right: 5px">@User.Identity.Name</span>
	</li>
	<li class="nav-item">
		<form class="form-inline" asp-controller="Account" asp-action="Logout">
			<button type="submit" class="btn btn-danger" style="margin-right: 5px">Выход</button>
		</form>
	</li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-warning" style="margin-right: 5px" asp-controller="Account" asp-action="Register">Регистрация</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-secondary" style="margin-right: 5px" asp-controller="Account" asp-action="Login">Вход</a>
    </li>
}
</ul>
