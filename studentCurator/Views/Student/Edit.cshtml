@model studentCurator.Models.Student

@{
    ViewBag.Title = "EditStudent";
    Layout = "_Layout";
}

<h2>Редактирование студента</h2>
<form method="post" asp-controller="Student" asp-action="Edit">
    <span class="form-inline"><input style="display: none" asp-for="GroupId" /></span>
    <span class="form-inline"><input style="display: none" asp-for="Faculty" /></span>
    <span class="form-inline"><input style="display: none" asp-for="Course" /></span>
    <div class="form-group">
        <label for="name">Имя</label>
        <input class="form-control" asp-for="Name" id="name">
        <span asp-validation-for="Name" style="color: red"></span>
    </div>
    <div class="form-group">
        <label for="surname">Фамилия</label>
        <input class="form-control" asp-for="SurName" id="surname">
        <span asp-validation-for="SurName" style="color: red"></span>
    </div>
    <div class="form-group">
        <label for="age">Возраст</label>
        <input class="form-control" asp-for="Age" id="age">
        <span asp-validation-for="Age" style="color: red"></span>
    </div>
    <div class="form-group">
        <input class="form-control" type="submit" value="Сохранить">
    </div>
</form>